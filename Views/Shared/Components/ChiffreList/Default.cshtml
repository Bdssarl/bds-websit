@using bds_site_web_version7_.Models;
@model Chiffre
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/Acceuil.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bds_site_web.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/odometer.js/0.4.8/themes/odometer-theme-default.min.css" rel="stylesheet">
    <script src="https://github.hubspot.com/odometer/odometer.js"></script>
</head>
<body>
<div class="chiffres">

    <div class="Annee-experience"> +  <span class="odometer" id="odometer">@Model.AnneeExperience</span> ans d'expérience</div>
        <div class="Projet-Realises"> + de @Model.NombreProjetsRealises projets réalisés</div>
        <div class="NPartenaires"> + de @Model.NombreEntreprisePartenaires partenaires</div>
   
</div>
<script >
    let value=0;
    setInterval(function(){
        
        value=value+5;
    odometer.innerHTML = value;
    if(value==60){
        value=0;
    }
}, 3000);
  </script>
  </body>
  </html>