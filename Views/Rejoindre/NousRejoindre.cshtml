<body>
                <div class="form_Contact">
        <form asp-controller="Rejoindre" asp-action="NousRejoindre" method="post" enctype="multipart/form-data">
                        <div class="name-group">
                <div class="form_lastname"> <label asp-for="LastName">Prenom</label><input class="input-button" type="text" required asp-for="LastName" placeholder="entrez votre prenom"/></div>
                <div class="form_firstname"><label asp-for="FirstName">Nom</label><input type="text" required class="input-button" asp-for="FirstName" placeholder="entrez votre nom" /></div>
                        </div>
                        <div class="name-group">
                <div class="form_email"><label asp-for="Email">Email</label><input type="email" required class="input-button" asp-for="Email" placeholder=" ex:bds@gmail.com" /></div>
                            <div class="form_number"><label >Telephone</label><input type="tel" required class="input-button" /></div>
                        </div>
            <div class="form_civilite"><label asp-for="civilite">civilite</label><select class="input-button" asp-for="civilite"><option>Monsieur </option><option>Madame </option></select></div>

                        <div class="message-group">
                <div class="form_objetMessage"><label asp-for="ObjetMessage">objet message</label><input type="text" required class="input-button" asp-for="ObjetMessage" placeholder="ex:solicitation d'une consultation" /></div>
                <div class="form_descriptionMessage"><textarea maxlength="1000"asp-for="DescriptionMessage" rows="20" placeholder="description (1000 caractères)">message</textarea></div>
                        </div>
            <div class="cv-file"><input type="file" required class="input-button" asp-for="formFile" /></div>
                        <div class="form_submit"> <button class="submit-button">Envoyer</button></div>
                    </form>
                   
                </div>
</body>
</html>