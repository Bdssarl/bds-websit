@{
    Layout = "~/Views/Rejoindre/_Layout.cshtml";
}
@model bds_site_web_version7_.Models.UserEmploi

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Emploi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <!--- <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />-->
    <link rel="stylesheet" href="~/css/NousRejoindre.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bds_site_web.styles.css" asp-append-version="true" />
</head>
<body>
    @ViewBag.Message
                <div class="form_Contact">
        <form asp-controller="Rejoindre" asp-action="NousRejoindre" method="post" enctype="multipart/form-data">
                        <div class="name-group">
                <div class="form_lastname"> <label asp-for="LastName">Prenom</label><input class="input-button" type="text" required asp-for="LastName" placeholder="entrez votre prenom" /> <span asp-validation-for="LastName" class="text-danger"></span></div>
                <div class="form_firstname"><label asp-for="FirstName">Nom</label><input type="text" required class="input-button" asp-for="FirstName" placeholder="entrez votre nom" /> <span asp-validation-for="FirstName" class="text-danger"></span> </div>
                        </div>
                        <div class="name-group">
                <div class="form_email"><label asp-for="Email">Email</label><input type="email" required class="input-button" asp-for="Email" placeholder=" ex:bds@gmail.com" /></div>
                            <div class="form_number"><label >Telephone</label><input type="tel" required class="input-button" /></div>
                        </div>
            <div class="form_civilite"><label asp-for="civilite">civilite</label><select class="input-button" asp-for="civilite"><option>Monsieur </option><option>Madame </option></select></div>
            <div class="form_civilite"><label asp-for="TypeEmploi">type d'emploi'</label><select class="input-button" asp-for="TypeEmploi"><option>Plein </option><option>Partiel </option></select></div>
            <div class="form_civilite"><label asp-for="DomaineEmploi">Domaine Emploi</label><select class="input-button" asp-for="DomaineEmploi"><option>Marketing</option><option>Communication </option></select></div>
                        <div class="message-group">
                <div class="form_objetMessage"><label asp-for="ObjetMessage">objet message</label><input type="text" required class="input-button" asp-for="ObjetMessage" placeholder="ex:solicitation d'une consultation" /></div>
                <div class="form_descriptionMessage"><textarea maxlength="1000"asp-for="DescriptionMessage" rows="10" placeholder="description (1000 caractères)">message</textarea></div>
                        </div>
            <div class="cv-file"><input type="file" required class="input-button" asp-for="formFile" />
                <span asp-validation-for="formFile" class="text-danger"></span>
                </div>
                        <div class="form_submit"> <button class="submit-button">Envoyer</button></div>
                    </form>          
                </div>
</body>
</html>