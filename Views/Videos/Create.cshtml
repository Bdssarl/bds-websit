@{
    Layout = "~/Views/Administration/_Layout.cshtml";
    ViewData["Title"] = "Video";
}
@model bds_site_web_version7_.Models.Video
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <!--- <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />-->
    <link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bds_site_web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="container-title">
            <h1>Enregistrer une video </h1>
        </div>

        <form class="form" asp-controller="Videos" asp-action="Create" method="post" enctype="multipart/form-data"> 
            <div class="cv-file"><input type="file" required class="input-button" asp-for="formFile" /></div>

            <div class="form_submit"> <button class="submit-button">Enregistrer</button></div>
        </form>

    </div>
</body>
</html>
