        <div class="main">

                @RenderBody()
        </div>
    
    <footer class="footer" id="footer">

        <div class="form_Contact">
            <form class="form">
                <div class="name-group">
                    <div class="form_lastname"> <label asp-for="LastName">Prenom</label><input class="input-button" type="text" required asp-for="LastName" placeholder="entrer votre prenom" id="prenom" /></div>
                    <div class="form_firstname"><label asp-for="FirstName">Nom</label><input type="text" required class="input-button" asp-for="FirstName" placeholder="entrer votre nom" id="nom" /></div>
                </div>
                <div class="name-group">
                    <div class="form_email"><label asp-for="Email">Email</label><input type="email" required class="input-button" asp-for="Email" placeholder="entrez votre email" id="email" /></div>
                    <div class="form_number"><label asp-for="PhoneNumber">Telephone</label><input type="tel" required class="input-button" asp-for="PhoneNumber" placeholder="entrez votre numéro de téléphone" id="telephone" /></div>
                </div>
                <div class="form_civilite"><label asp-for="civilite">civilite</label><select required class="input-button" asp-for="civilite"><option>Monsieur</option><option>Madame</option></select></div>
                <div class="message-group">
                    <div class="form_objetMessage"><label asp-for="ObjetMesage">objet message</label><input type="text" required class="input-button" asp-for="ObjetMesage" placeholder="ex:renseignement" id="obj" /></div>
                    <div class="form_descriptionMessage"><textarea asp-for="DescriptionMessage" rows="10" placeholder="description(1000 caractères)" id="mess">message</textarea></div>
                </div>
                <div class="form_submit"> <button class="submit-button" onclick="sendMessage()">soumettre</button></div>
            </form>
        </div>
        <div class="adress">
