@model bds_site_web_version7_.Models.MessageUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bds_site_web</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/Projets.css" asp-append-version="true" />
   <!-- <link rel="stylesheet" href="~/css/NousRejoindre.css" asp-append-version="true" />-->
    <link rel="stylesheet" href="~/Bds_site_web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header" role="navigation">
        <div class="logo">
            <img src="~/Icons/logo.jfif" class="img" alt="logo" />
            <div class="slogan">Business|Developpement|service</div>
        </div>
        <div class="nav-header">
            <a class="link-header" asp-controller="Acceuil" asp-action="Acceuil"> Acceuil </a>
            <a class="link-header" asp-controller="QuiSommeNous" asp-action="QuiSommeNous"> Qui sommes nous ? </a>
            <a class="link-header" asp-controller="Projets" asp-action="Projets">Nos projets </a>
            <a class="link-header" asp-controller="FormationTermine" asp-action="FormationTermine"> Nos formations  </a>
            <a class="link-header" asp-controller="Rejoindre" asp-action="Rejoindre">Nous rejoindre </a>
            <a class="link-header">Mediathèque</a>
            <a class="link-header">Annonces</a>
            <a class="link-header" href="#footer">Nous contacter</a>
        </div>


    </header>


        <div class="nav-projet">
        <a asp-controller="ProjetRealise" asp-action="Projet"class="nav-link">
                    Projets réalisés
                </a>
        
                <a asp-controller="ProjetAvenir" asp-action="Projet" class="nav-link">
                    Projets à venir 
                </a>
          </div>
        <div class="main">

                @RenderBody()
        </div>
    
    <footer class="footer" id="footer">

        <div class="form_Contact">
            <form class="form">
                <div class="name-group">
                    <div class="form_lastname"> <label asp-for="LastName">Prenom</label><input class="input-button" type="text" required asp-for="LastName" placeholder="entrer votre prenom" id="prenom" /></div>
                    <div class="form_firstname"><label asp-for="FirstName">Nom</label><input type="text" required class="input-button" asp-for="FirstName" placeholder="entrer votre nom" id="nom" /></div>
                </div>
                <div class="name-group">
                    <div class="form_email"><label asp-for="Email">Email</label><input type="email" required class="input-button" asp-for="Email" placeholder="entrez votre email" id="email" /></div>
                    <div class="form_number"><label asp-for="PhoneNumber">Telephone</label><input type="tel" required class="input-button" asp-for="PhoneNumber" placeholder="entrez votre numéro de téléphone" id="telephone" /></div>
                </div>
                <div class="form_civilite"><label asp-for="civilite">civilite</label><select required class="input-button" asp-for="civilite"><option>Monsieur</option><option>Madame</option></select></div>
                <div class="message-group">
                    <div class="form_objetMessage"><label asp-for="ObjetMesage">objet message</label><input type="text" required class="input-button" asp-for="ObjetMesage" placeholder="ex:renseignement" id="obj" /></div>
                    <div class="form_descriptionMessage"><textarea asp-for="DescriptionMessage" rows="10" placeholder="description(1000 caractères)" id="mess">message</textarea></div>
                </div>
                <div class="form_submit"> <button class="submit-button" onclick="sendMessage()">soumettre</button></div>
            </form>
        </div>
        <div class="adress">
            <p>Contacts</p>
            <p>680820001/677690738/699648787</p>
            <p>Email</p>
            <p>bds@gmail.com</p>
            <p>Localisation</p>
            <p>Descente avenue germaine</p>

        </div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d9467.847619295175!2d11.521740872301836!3d3.8659541076658677!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2scm!4v1706108021589!5m2!1sfr!2scm" width="700" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        <div class="copyright">&copy; 2024 - BdsSarl</div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


